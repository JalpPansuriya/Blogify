<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("./partials/head") %>
    <title>Sign In - Blogify</title>
</head>

<body>
  <div class="form-page">
    <div class="form-container">
      <div class="form-card">
        <!-- Header -->
        <div class="form-header">
          <a href="/" class="form-logo">
            <span>B</span>
          </a>
          <h1 class="form-title">Welcome back</h1>
          <p class="form-subtitle">Sign in to continue your journey</p>
        </div>

        <!-- Error Alert -->
        <% if (locals.error) { %>
          <div class="alert alert-error">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="12" y1="8" x2="12" y2="12"></line>
              <line x1="12" y1="16" x2="12.01" y2="16"></line>
            </svg>
            <%= locals.error %>
          </div>
          <% } %>

            <!-- Form -->
            <form action="/user/signin" method="post">
              <div class="form-group">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-input" id="email" name="email" placeholder="you@example.com" required
                  autofocus />
              </div>

              <div class="form-group">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-input" id="password" name="password" placeholder="••••••••"
                  required />
              </div>

              <button type="submit" class="btn btn-primary btn-full">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M15 3h4a2 2 0 012 2v14a2 2 0 01-2 2h-4"></path>
                  <polyline points="10,17 15,12 10,7"></polyline>
                  <line x1="15" y1="12" x2="3" y2="12"></line>
                </svg>
                Sign In
              </button>
            </form>

            <!-- Footer -->
            <div class="form-footer">
              Don't have an account? <a href="/user/signup">Create one</a>
            </div>
      </div>

      <!-- Back to home link -->
      <div style="text-align: center; margin-top: var(--space-6);">
        <a href="/"
          style="color: var(--color-text-muted); font-size: var(--text-sm); display: inline-flex; align-items: center; gap: var(--space-2); transition: color var(--transition-base);">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"></path>
          </svg>
          Back to Home
        </a>
      </div>
    </div>
  </div>

  <%- include("./partials/scripts") %>
</body>

</html>