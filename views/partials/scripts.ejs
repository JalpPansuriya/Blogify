<!-- Remove Bootstrap JS, use vanilla JS for any needed interactions -->
<script>
  // Add stagger animation classes to blog cards
  document.addEventListener('DOMContentLoaded', function () {
    const cards = document.querySelectorAll('.blog-card, .add-note-card');
    cards.forEach((card, index) => {
      card.classList.add('stagger-' + ((index % 8) + 1));
    });

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({ behavior: 'smooth' });
        }
      });
    });

    // Add active state to current nav item
    const currentPath = window.location.pathname;
    document.querySelectorAll('.nav-item').forEach(item => {
      item.classList.remove('active');
      if (item.getAttribute('href') === currentPath) {
        item.classList.add('active');
      } else if (currentPath === '/' && item.getAttribute('href') === '/') {
        item.classList.add('active');
      }
    });
  });
</script>